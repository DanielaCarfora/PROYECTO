Terreno MostrarTablero(Terreno Tablero[10][20] , char s1[16]){
    for(int i=0; i<10; i++){
        for(int j=0; j<20; j++){
                if(Tablero[i][j]->efecto!=NINGUNO) Tablero[i][j]=178;
                if(Tablero[i][j]->personaje!=NULL) Tablero[i][j]= s1[0];
                if(Tablero[i][j]->items!=NULL) Tablero[i][j]= '*';
                else Tablero[i][j]=176;
            printf("%c",Tablero[i][j]);
        } printf("\n");
    }
return Tablero;}


